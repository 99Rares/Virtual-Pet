<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.virtualpetpompi">

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon1"
        android:supportsRtl="true"
        android:theme="@style/Theme.VirtualPetPompi">
        <activity
            android:name=".activity.StatisticsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.BackgroundActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.FoodActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ShopActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.StepsService"
            android:label="StepsService" />

        <receiver android:name=".service.HungerNotification" />
    </application>

</manifest>